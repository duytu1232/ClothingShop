@model IEnumerable<ClothingShop.Models.Product>
@{ var vndMoney = System.Globalization.CultureInfo.GetCultureInfo("vi-VN"); }
@{ var user = Session["Account"] as ClothingShop.Models.Customer;}



<div class="container-fluid ">
    <div id="carouselExampleControls" class="carousel slide slider" data-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="d-block w-100" src="~/Images/slide.png" alt="First slide">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="~/Images/slide1.png" alt="Second slide">
            </div>

        </div>
        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>

<div class="container page-body">
    <h3 style="text-align: center">Sản phẩm nổi bật</h3>

    <div class=" row product-list">

        @foreach (var item in Model)
        {
            <!-- product -->
            <div class="col-lg-3 product-item">
                <div class="card" style="width: 18rem;">
                    <a href="@Url.Action("Index/"+item.ProductID,"ProductDetail")" class="card-title"> <img class="card-img-top" src="~/Images/@item.ImagePro" alt="Card image cap"> </a>
                    <div class="card-body">
                        <a href="@Url.Action("Index/"+item.ProductID,"ProductDetail")" class="card-title"><h5>@item.ProductName</h5></a>
                        <h6 style="color:darkred">@String.Format(vndMoney, "{0:c0}", item.price)</h6>


                        <p class="card-text rating-item">
                            <i class="bi bi-star-fill"></i>
                            <i class="bi bi-star-fill"></i>
                            <i class="bi bi-star-fill"></i>
                            <i class="bi bi-star-fill"></i>
                            <i class="bi bi-star-fill"></i>
                        </p>

                        @if (user != null)
                        {
                            <a href="@Url.Action("AddSingleToCart/" + item.ProductID, "Cart")" class="btn quick-add-to-cart"><i class="bi bi-cart-plus"></i> Thêm vào giỏ hàng</a>

                        }
                        else { 
                        <a href="@Url.Action("Login", "Users")" class="btn quick-add-to-cart"><i class="bi bi-cart-plus"></i> Thêm vào giỏ hàng</a>
                        }


                    </div>
                </div>
            </div>
            <!-- end-product -->
        }



    </div>
</div>

<div class="introduce">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 img-intro">
                <img src="~/Images/item-pnt.png" style="width:100%; height:100%" alt="">
            </div>
            <div class="col-lg-4 header-right">
                <div>
                    <h3>Instagram</h3>
                    <p>
                        Theo dõi chúng tôi để cập nhật thêm những sản phẩm mới nhất !!!

                    </p>
                </div>
                <div>
                    <h3 style="color: rgb(138, 1, 1);">#DAKT_FASHION</h3>
                </div>

            </div>
        </div>

    </div>
</div>

<div class="slogan">
    <h4 style="text-align:center">Cập nhật mới nhất</h4>
    <h2 style="text-align: center; color:rgb(138, 1, 1)">Phong cách trending</h2>
</div>