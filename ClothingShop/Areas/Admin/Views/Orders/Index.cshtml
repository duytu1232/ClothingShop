@model IEnumerable<ClothingShop.Models.Order>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Admin.cshtml";
}

<h2>Danh sách đơn hàng</h2>


<table border="1">
    <tr>
        <th>Khách hàng</th>
        <th>Ngày đặt</th>
        <th>Địa chỉ giao hàng</th>
        <th>Trạng thái đơn hàng</th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Customer.CustomerName</td>
            <td>@String.Format("{0:dd/MM/yyyy}", item.DateOrder)</td>
            <td>@item.Address</td>
            @if (item.Status == 0)
            {
            <td>Chưa xác nhận</td>
            }
            else
            {
            <td>Đã xác nhận</td>

            }
            <td><a href="@Url.Action("Details/"+item.IDOrder,"Orders")">Xem chi tiết</a></td>
        </tr>
    }


</table>
