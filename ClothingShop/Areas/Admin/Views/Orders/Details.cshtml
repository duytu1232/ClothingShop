@model ClothingShop.Models.Order

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_Admin.cshtml";
}

<h2>Chi tiết đơn hàng</h2>

<div>
    <table border="1">
        <tr>
            <th>Sản phẩm</th>
            <th>Tên sản phẩm</th>
            <th>Số lượng</th>
            <th>Đơn giá</th>
        </tr>

        @*<td>
            <img src="~/Images/@" />
        </td>*@
        @foreach (var item in ViewBag.Detail)
        {
             <tr>
                 <td>
                     <img src="~/Images/@item.Product.ImagePro" />
                 </td>
                 <td>@item.Product.ProductName</td>
                 <td>@item.Quantity</td>
                 <td>@item.UnitPrice</td>
             </tr>
         }
        </table>
        <div>
            Tổng tiền : <span style="font-weight:bold; font-size:30px">@ViewBag.Total</span> <br/>
            Tên khách hàng : @Model.Customer.CustomerName <br/>
            Địa chỉ giao hàng : @Model.Address <br/>
            @if(Model.Status == 0)
            {
                <a href="@Url.Action("ConfirmOrder/"+ Model.IDOrder,"Orders")" class="btn btn-success">Xác nhận đơn hàng</a>
            }
        </div>
</div>
<p>
   
    @Html.ActionLink("Quay trở lại", "Index")
</p>
