@model IEnumerable<ClothingShop.Models.Product>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Admin.cshtml";
}

<h2>Danh sách sản phẩm</h2>

<p>
    @Html.ActionLink("Thêm sản phẩm mới", "Create")
</p>
<table border="1">
    <tr>
        <th>
            Hình ảnh
        </th>
        <th>
            Tên sản phẩm
        </th>

        <th>
            Giá
        </th>

        
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            <img src="~/Images/@item.ImagePro" />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ProductName)
        </td>
        
        <td>
            @Html.DisplayFor(modelItem => item.price)
        </td>
        
        <td>
            @Html.DisplayFor(modelItem => item.Category.CategoryName)
        </td>
        <td>
            @Html.ActionLink("Chỉnh sửa", "Edit", new { id=item.ProductID }) |
            
            @Html.ActionLink("Xóa", "Delete", new { id=item.ProductID })
        </td>
    </tr>
}

</table>
