@model IEnumerable<ClothingShop.Models.Customer>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Admin.cshtml";
}

<h2>Danh sách khách hàng</h2>


<table border="1">
    <tr>
        <th>
            Tên khách hàng
        </th>
        <th>
            Email
        </th>
      

        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CustomerName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EmailCus)
        </td>
       
        
        <td>
            @Html.ActionLink("Chỉnh sửa", "Edit", new { id=item.IDCus }) |
            
            @Html.ActionLink("Xóa", "Delete", new { id=item.IDCus })
        </td>
    </tr>
}

</table>
